<p id="notice"><%= notice %></p>

<h1 align="center">All Alpha Blog Users</h1>

  <tbody>
    <div align="center">
      <%= will_paginate(@users, :renderer => WillPaginate::ActionView::Bootstrap4LinkRenderer) %>
      <% @users.each do |user| %>
        <ul style="list-style-type:none">
          <li> Created by:</li>
          <li> <%= link_to gravatar_for(user), user_path(user) %></li>
          <li> <%= link_to user.username, user_path(user) %></li>
          <li> 
            <small><%= pluralize(user.articles.count, "article") if user.articles %></small>
            <% if logged_in? and current_user.admin? %>
              <li><%= link_to "Delete this user", user_path(user), method: :delete, data: {confirm: "Are you sure you want to delete the user and all their articles?" } %></li>
            <% end %>
          </li>
        </ul>
      <% end %>
    </div>
  </tbody>



