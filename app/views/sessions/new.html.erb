<% flash.each do |key, value| %>
    <div class="flash <%= key %>"><%= value %></div>
<% end %>
  
<h1 align="center">Log in</h1>

  <div class="row">
    
    <%= form_for(:session, :html => {class: "form-horizontal", role: "form"}, url: login_path) do |form| %>
      
      <div class="field">
        <%= form.label :email %>
        <%= form.text_field :email, class: "form-control", placeholder: "Enter email", autofocus: true %>
      </div>

     <div class="field">
        <%= form.label :password %>
        <%= form.password_field :password, class: "form-control", autocomplete: "off" %>
      </div>

      <div class="actions">
        <%= form.submit "Start Session", class: 'btn btn-primary btn-lg' %>
      </div>
    <% end %>

  </div>