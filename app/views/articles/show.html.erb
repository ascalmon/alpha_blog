<p id="notice"><%= notice %></p>
<h2 align="center">
  Title: <%= @article.title %>
</h2>
<p align="center">
  <small>Requested at: <%= @time %></small>
</p>
<div class="row">
  <% if @article.user %>
    <ul style="list-style-type:none">
   
      <div align="center">
        <li> Created by:</li>
        <li> <%= link_to gravatar_for(@article.user), user_path(@article.user) %></li>
        <li> <%= link_to @article.user.username, user_path(@article.user) %></li>
        <li> <%= "Parametros = #{@parametros}" if @parametros %></li>
        <li> 
          <small><%= pluralize(@article.user.articles.count, "article") if @article.user.articles %></small>
        </li>
      </div>

    </ul>
  <% end %>
</div>

  <h4 align="center"><strong>Description:</strong></h4>
  <div align="center">
     <%= simple_format(@article.description) %>
</div>
 



<%= link_to 'Edit', edit_article_path(@article) %> |
<%= link_to 'Back', articles_path %>
