<p id="notice"><%= notice %></p>
<h2 align="center">
  Title: <%= @article.title %>
</h2>
<p align="center">
  <small>Requested at: <%= @time %></small>
</p>
<div class="row">
  <% if @article.user %>
    <ul class="listing" style="list-style-type:none">
   
      <div row center align="center">
        <li> Created by:</li>
        <li> <%= link_to gravatar_for(@article.user), user_path(@article.user) %> </li>
        <li class="article-title"> 
          <%= link_to @article.user.username, user_path(@article.user) %>
        </li>
       
        <li> 
          <small><%= pluralize(@article.user.articles.count, "article") if @article.user.articles %></small>
        </li>
      </div>

    </ul>
  <% end %>
</div>

  <h4 class="center description" align="center"><strong>Description:</strong></h4>
  <div align="center">
     <%= simple_format(@article.description) %>
</div>
<% if logged_in? && (current_user.username == @article.user.username || current_user.admin?) %>
  <%= link_to 'Edit this article', edit_article_path(@article), class: "btn btn-xs btn-success" %>
  <%= link_to 'Delete this article', article_path(@article), method: :delete, class: "btn btn-xs btn-danger" %>
<% end %>   
<%= link_to 'View all articles', articles_path, class: "btn btn-xs btn-success" %>
    
