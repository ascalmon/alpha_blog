<p id="notice"><%= notice %></p>

  <% if article.errors.any? %>
  <div class="row">
   <div class="col-sm-12 col-sm-offset-2">
    <div class="card card-danger">
        <div class="card-body">
          <h4 class="card-title"> 
            <%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:
          </h4>
          <div class="card-text">
            <ul>
              <% article.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
           </div>
      </div>
     </div>
    </div>
   </div>
  <% end %>


  <div class="row">
    <div class="col-sm-12">
      <%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |f| %>
        <div class="row form-group">
          <div align = "right" class= " col-sm-2 col-form-label">
            <%= f.label :title %>
          </div>
          <div class="col-sm-8">
            <%= f.text_field :title, class: "form-control", placeholdr: "Title of article", autofocus: true %>
          </div>
        </div>
        <div class="row form-group">
          <div align = "right" class= " col-sm-2 col-form-label">
            <%= f.label :city %>
          </div>
          <div class="col-sm-8">
            <%= f.text_field :location, class: "form-control", placeholdr: "City of inventory", autofocus: true %>
          </div>
        </div>
      
        <div class="row form-group">
          <div align="right" class="col-sm-2 col-form-label ">
            <%= f.label :description %>
          </div>
          <div class="col-sm-8">
            <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Body of Article" %>
          </div>
        </div>
      
        <div class="row form-group">
          <div class="offset-sm-2 col-sm-10">
            <%= f.submit class: 'btn btn-primary btn-lg'%>
          </div>
        </div> 
       
        <div class="row offset-sm-2 col-xs-4 col-xs-offset-4">
          <%= link_to "Cancel request and return to articles listing", articles_path %>
        </div>
     
      <% end %>
    </div>
  </div> 



